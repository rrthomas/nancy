{
  "name": "@sc3d/nancy",
  "description": "Simple templating system",
  "version": "7.0.0-beta1",
  "author": "Reuben Thomas",
  "bin": {
    "nancy": "./bin/run"
  },
  "bugs": "https://github.com/rrthomas/nancy/issues",
  "dependencies": {
    "argparse": "^2.0.1",
    "debug": "^4.3.2",
    "execa": "^5.0.0",
    "fs-extra": "^10.0.0",
    "linkfs": "^2.1.0",
    "strip-final-newline": "^2.0.0",
    "tslib": "^1.14.1",
    "unionfs": "^4.4.0",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/argparse": "^2.0.10",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.3",
    "@types/debug": "^4.1.6",
    "@types/fs-extra": "^9.0.12",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.17.5",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "diagrams": "^0.27.0",
    "dir-compare": "^3.3.0",
    "eslint": "^7.30.0",
    "linkinator": "rrthomas/linkinator",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "pre-commit": "^1.2.2",
    "tempy": "^1.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "files": [
    "/bin/run",
    "/lib"
  ],
  "homepage": "https://github.com/rrthomas/nancy",
  "license": "GPL-3.0-or-later",
  "main": "lib/index.js",
  "repository": "rrthomas/nancy",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "prebuild": "node --print \"'export const programVersion = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "tsc --build",
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "prepack": "npm run clean && npm run build && npm run docs",
    "test": "npm run build && mocha --forbid-only \"test/**/*.test.ts\"",
    "coverage": "NODE_ENV=coverage nyc --extension .ts npm test",
    "loc": "npx cloc src/*.ts",
    "diff-check": "git diff --exit-code",
    "prepublishOnly": "npm run diff-check && git push --all",
    "postpublish": "git push --tags",
    "example": "open-cli file://$(pwd)/test/cookbook-example-website-expected/index/index.html",
    "docs": "./bin/run README.nancy.md README.md && ./bin/run Cookbook.nancy.md Cookbook.md"
  },
  "pre-commit": [
    "lint",
    "test",
    "docs",
    "diff-check"
  ],
  "types": "lib/*.d.ts"
}
