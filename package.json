  "scripts": {
    "lint": "eslint . --ext .ts",
    "prebuild": "node --print \"'export const programVersion = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "tsc --build",
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "prepack": "npm run clean && npm run build && npm run docs",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "coverage": "NODE_ENV=coverage nyc --extension .ts npm run test",
    "example": "open-cli file://$(pwd)/test/cookbook-example-website-expected/index/index.html",
    "docs": "./bin/run Cookbook.nancy.md Cookbook.md && ./bin/run README.nancy.md README.md"
  },
  "types": "lib/*.d.ts"
